        .action__f-boxes-row
          .action__f-boxes-col.action__f-boxes-col--half
            .action__f-item
              p.action__f-item-title 526 Ph/s
              p.action__f-item-text Общая мощность

          .action__f-boxes-col.action__f-boxes-col--half
            .action__f-boxes-row
              .action__f-boxes-col
                .action__f-item
                  p.action__f-item-title SHA - 256
                  p.action__f-item-text матричный обсвет
